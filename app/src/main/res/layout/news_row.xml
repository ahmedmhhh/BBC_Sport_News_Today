<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="185dp"
    android:layout_margin="5dp"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/newsposteIMG"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/newsTitleTXT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:text="Sport News Title"
                android:textColor="#2d2d2d"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/publishedAtTXT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:text="2018-03-30T19:08:44Z"
                android:textColor="#7b7b7b"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/newsDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="A man and a woman are sentenced in a country where slavery is widespread and convictions rare"
                android:textColor="#a1a1a1"
                android:textSize="16dp" />


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_marginTop="-6dp"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#e1e1e1" />
</LinearLayout>